<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox x:Name="UsernameTextBox" PlaceholderText="Username" Margin="0,0,0,10" Width="200"/>
            <PasswordBox x:Name="PasswordBox" PlaceholderText="Password" Margin="0,0,0,10" Width="200"/>
            <CheckBox x:Name="RememberCheckbox" Content="Remember me" Margin="0,0,0,10"/>
            <TextBox x:Name="ServerTextBox" PlaceholderText="Server" Margin="0,0,0,10" Width="200"/>
            <TextBox x:Name="DatabaseTextBox" PlaceholderText="Database" Margin="0,0,0,10" Width="200"/>
            <Button Content="Login" Click="OnLoginButtonClick" Width="100"/>

        </StackPanel>
    </Grid>
</Page>
